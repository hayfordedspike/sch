{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/constants/*": [
        "./src/constants/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/router/*": [
        "./src/router/*"
      ],
      "@/stores/*": [
        "./src/stores/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/views/*": [
        "./src/views/*"
      ],
      "@/composables/*": [
        "./src/composables/*"
      ],
      "@/schema/*": [
        "./src/schema/*"
      ],
      "@/api/*": [
        "./src/api/*"
      ]
    }
  }
}
